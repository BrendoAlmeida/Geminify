# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# For production, change to your domain:
# SPOTIFY_REDIRECT_URI=https://yourdomain.com/callback

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_DEFAULT_MODEL=gemini-1.5-flash

# Session Configuration
SESSION_SECRET=your-very-secure-random-session-secret-change-this-in-production

# Server Configuration
NODE_ENV=development
PORT=3000

# Production Configuration (uncomment and set for production)
# NODE_ENV=production
# PORT=80
# SESSION_SECRET=your-production-session-secret-very-long-and-random